<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintWidth_default="percent"
    app:layout_constraintWidth_percent=".33">

    <TextView
        android:id="@+id/statusTextview"
        android:layout_width="166dp"
        android:layout_height="27dp"
        android:gravity="center"
        android:text="@string/status"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.881"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.861" />

    <TextView
        android:id="@+id/addressTextview"
        android:layout_width="166dp"
        android:layout_height="27dp"
        android:gravity="center"
        android:text="@string/address"
        android:textAlignment="center"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/locationicon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.881"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.589" />

    <TextView
        android:id="@+id/numberOfRoomsTextview"
        android:layout_width="166dp"
        android:layout_height="27dp"
        android:gravity="center"
        android:text="@string/of_rooms"
        android:textAlignment="center"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/homeicon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.881"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.321" />

    <TextView
        android:id="@+id/surfaceAreaTextview"
        android:layout_width="166dp"
        android:layout_height="27dp"
        android:gravity="center"
        android:text="@string/surface"
        android:textAlignment="center"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/surfaceicon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.881"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.079" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/listingPhoto"
        android:layout_width="179dp"
        android:layout_height="229dp"
        android:background="@drawable/defaulthomeimage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>