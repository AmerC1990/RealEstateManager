<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loanSimulatorScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myWhite">


    <Button
        android:id="@+id/calculateLoanButton"
        android:layout_width="220dp"
        android:layout_height="89dp"
        android:text="@string/calculate"
        android:textSize="30sp"
        app:backgroundTint="@color/myGreen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.816"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.565" />

    <Button
        android:id="@+id/cancelLoanCalculatorButton"
        android:layout_width="180dp"
        android:layout_height="89dp"
        android:text="@string/cancel"
        android:textSize="30sp"
        app:backgroundTint="@color/myRed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.565" />

    <TextView
        android:id="@+id/totalLoanAmountDisplay"
        android:layout_width="175dp"
        android:layout_height="82dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/myBlack"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.789" />

    <TextView
        android:id="@+id/totalLoanAmountTextview"
        android:layout_width="450dp"
        android:layout_height="137dp"
        android:gravity="center"
        android:text="@string/total_loan_amount"
        android:textColor="@color/myBlack"
        android:textSize="37sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.824" />

    <TextView
        android:id="@+id/monthlyPaymentDisplay"
        android:layout_width="325dp"
        android:layout_height="112dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/myBlack"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.875"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.94" />

    <TextView
        android:id="@+id/monthlyPaymentTextview"
        android:layout_width="450dp"
        android:layout_height="101dp"
        android:gravity="center"
        android:text="@string/monthly_payment"
        android:textColor="@color/myBlack"
        android:textSize="37sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.916" />

    <TextView
        android:id="@+id/loanInterestRateTextview"
        android:layout_width="377dp"
        android:layout_height="67dp"
        android:gravity="center"
        android:text="@string/interest_rate"
        android:textColor="@color/myBlack"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.447" />

    <TextView
        android:id="@+id/loanNumberOfyearsTextview"
        android:layout_width="384dp"
        android:layout_height="62dp"
        android:gravity="center"
        android:text="@string/loan_number_of_years"
        android:textColor="@color/myBlack"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.323" />

    <TextView
        android:id="@+id/loanDownPaymentTextview"
        android:layout_width="375dp"
        android:layout_height="62dp"
        android:gravity="center"
        android:hint="@string/price_of_property_usd"
        android:text="@string/down_payment"
        android:textColor="@color/myBlack"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.212" />

    <TextView
        android:id="@+id/loanSimulatorTitle"
        android:layout_width="421dp"
        android:layout_height="68dp"
        android:gravity="center"
        android:text="@string/loan_simulator_title"
        android:textColor="@color/myBlack"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.007" />

    <TextView
        android:id="@+id/loanPropertyPriceTextview"
        android:layout_width="361dp"
        android:layout_height="55dp"
        android:gravity="center"
        android:text="@string/loan_property_price"
        android:textColor="@color/myBlack"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.111" />

    <TextView
        android:id="@+id/totalInterestBeingPaidTextview"
        android:layout_width="450dp"
        android:layout_height="76dp"
        android:gravity="center"
        android:text="@string/total_interest_being_paid"
        android:textColor="@color/myBlack"
        android:textSize="37sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.674" />

    <TextView
        android:id="@+id/totalInterestBeingPaidDisplay"
        android:layout_width="305dp"
        android:layout_height="82dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/myBlack"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.835"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.668" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/loanInterestRateEditText"
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:hint="@string/percent_symbol"
        android:inputType="numberDecimal"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.851"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.408" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/loanNumberOfYearsEdittext"
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:inputType="numberDecimal"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.312" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/loanDownPaymentEditText"
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:hint="@string/down_payment_usd"
        android:inputType="numberDecimal"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.206" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/loanPropertyPriceEditText"
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:hint="@string/price_of_property_usd_short"
        android:inputType="numberDecimal"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.088" />
</androidx.constraintlayout.widget.ConstraintLayout>