<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    tools:layout_editor_absoluteY="10dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/mapImageView"
        android:layout_width="340dp"
        android:layout_height="169dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.926"
        app:srcCompat="@drawable/mapimage" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/addressTextview"
        android:layout_width="228dp"
        android:layout_height="238dp"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:textAlignment="gravity"
        android:textColor="@color/myBlack"
        android:textSize="30sp"
        android:textStyle="bold"
        app:drawableLeftCompat="@drawable/locationicon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.737"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.874" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/numberOfRoomsTextview"
        android:layout_width="233dp"
        android:layout_height="177dp"
        android:drawablePadding="4dp"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:textAlignment="gravity"
        android:textColor="@color/myBlack"
        android:textSize="30sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/homeicon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.758"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.427" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/surfaceAreaTextview"
        android:layout_width="233dp"
        android:layout_height="153dp"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical"
        android:textAlignment="gravity"
        android:textColor="@color/myBlack"
        android:textSize="30sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/surfaceicon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.758"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/statusTextview"
        android:layout_width="194dp"
        android:layout_height="93dp"
        android:gravity="center"
        android:text=""
        android:textAlignment="gravity"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.639"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/listingPhoto"
        android:layout_width="353dp"
        android:layout_height="267dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.048" />


</androidx.constraintlayout.widget.ConstraintLayout>