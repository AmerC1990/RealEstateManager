<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ProgressBar
        android:visibility="gone"
        android:indeterminateTint="@color/colorPrimaryDark"
        android:id="@+id/newListingProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="137dp"
        android:layout_height="145dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.452" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.ListingFormFragment">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:foreground="?attr/selectableItemBackground"
                    android:background="@color/myLightGrey"
                    android:adjustViewBounds="true"
                    android:id="@+id/addImageIcon"
                    android:layout_margin="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:src="@drawable/plus_icon" />

                <ImageView
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    android:adjustViewBounds="true"
                    android:id="@+id/imageViewChooseImage"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingBottom="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="400dp" />

                <ImageView
                    android:adjustViewBounds="true"
                    android:paddingTop="0dp"
                    android:src="@drawable/deletebutton"
                    android:visibility="gone"
                    android:id="@+id/deleteFirstPhoto"
                    android:layout_marginTop="0dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center" />

                <ImageView
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    android:adjustViewBounds="true"
                    android:id="@+id/imageViewChooseImage2"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingBottom="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="400dp" />

                <ImageView
                    android:adjustViewBounds="true"
                    android:paddingTop="0dp"
                    android:src="@drawable/deletebutton"
                    android:visibility="gone"
                    android:id="@+id/deleteSecondPhoto"
                    android:layout_marginTop="0dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center" />

                <ImageView
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    android:adjustViewBounds="true"
                    android:id="@+id/imageViewChooseImage3"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingBottom="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="400dp" />

                <ImageView
                    android:adjustViewBounds="true"
                    android:paddingTop="0dp"
                    android:src="@drawable/deletebutton"
                    android:visibility="gone"
                    android:id="@+id/deleteThirdPhoto"
                    android:layout_marginTop="0dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center" />

                <ImageView
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    android:adjustViewBounds="true"
                    android:id="@+id/imageViewChooseImage4"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingBottom="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="400dp" />

                <ImageView
                    android:adjustViewBounds="true"
                    android:paddingTop="0dp"
                    android:src="@drawable/deletebutton"
                    android:visibility="gone"
                    android:id="@+id/deleteFourthPhoto"
                    android:layout_marginTop="0dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center" />

                <ImageView
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    android:adjustViewBounds="true"
                    android:id="@+id/imageViewChooseImage5"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingBottom="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="400dp" />

                <ImageView
                    android:adjustViewBounds="true"
                    android:paddingTop="0dp"
                    android:src="@drawable/deletebutton"
                    android:visibility="gone"
                    android:id="@+id/deleteFifthPhoto"
                    android:layout_marginTop="0dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center" />

                <ImageView
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    android:adjustViewBounds="true"
                    android:id="@+id/imageViewChooseImage6"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingBottom="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="400dp" />

                <ImageView
                    android:adjustViewBounds="true"
                    android:paddingTop="0dp"
                    android:src="@drawable/deletebutton"
                    android:visibility="gone"
                    android:id="@+id/deleteSixthPhoto"
                    android:layout_marginTop="0dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center" />

                <ImageView
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    android:adjustViewBounds="true"
                    android:id="@+id/imageViewChooseImage7"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingBottom="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="400dp" />

                <ImageView
                    android:adjustViewBounds="true"
                    android:paddingTop="0dp"
                    android:src="@drawable/deletebutton"
                    android:visibility="gone"
                    android:id="@+id/deleteSeventhPhoto"
                    android:layout_marginTop="0dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center" />

                <ImageView
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    android:adjustViewBounds="true"
                    android:id="@+id/imageViewChooseImage8"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingBottom="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="400dp" />

                <ImageView
                    android:adjustViewBounds="true"
                    android:paddingTop="0dp"
                    android:src="@drawable/deletebutton"
                    android:visibility="gone"
                    android:id="@+id/deleteEighthPhoto"
                    android:layout_marginTop="0dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center" />

                <ImageView
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    android:adjustViewBounds="true"
                    android:id="@+id/imageViewChooseImage9"
                    android:layout_marginTop="20dp"
